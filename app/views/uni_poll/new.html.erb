	<%= label_tag :poll_name %>
	<%= text_field_tag :poll_name %><br>
</div>
<div>
	<%= label_tag :contestant_name %>
	<%= text_field_tag "contestant_name[]" %>
<br>
	
</div>
<div>
	<%= label_tag :contestant_name %>
	<%= text_field_tag "contestant_name[]" %>
<br>
</div>

<%= submit_tag "submit", :id => "submit" %>

<br>
<% end %>

