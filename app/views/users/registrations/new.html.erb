<h2 class="form-heading">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="errors_displayed"><%= devise_error_messages! %></div>

    <%= f.hidden_field :hidden_image, :value => "not_set"%>

  <div class="field" id="user_name_field">
    <%= f.label :user_name %>
    <div class="set_user_name_div">
    <%= f.text_field :user_name, autocomplete: "off", autofocus: true,  :id => 'set_user_name' , :required => true %>
    <div id="user_name_available">User Name is Available</div>
      <div id="user_name_not_valid">User Name not Valid</div>
      </div>
  </div>

  <div class="field">
    <%= f.label :first_name %>
    <div class="field-input">
    <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <div class="field-input">
    <%= f.text_field :last_name %>
    </div>
  </div>
  
  <div class="field">
    <%= f.label :email %>
    <div class="field-input">
    <%= f.email_field :email , :required => true%>
    </div>
  </div>

  <div class="field">
    <%= f.label :password %>
    <div class="field-input">
    <%= f.password_field :password, autocomplete: "off" , :required => true%>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <div class="field-input">
    <%= f.password_field :password_confirmation, autocomplete: "off" , :required => true %>
    </div>
  </div>

    <div class="field">
      <%= f.label :country %>
      <div class="field-input">
      <%= f.country_select :country , :required => true%>
      </div>
    </div>

  <div class="field">
    <%= f.label :image %>
    <div class="field-input">
    <%= f.file_field :image , :onChange => "loadUserImage(event,this)"%>
    </div>
  </div>
    <div class="user_image_set">
      <img src="" id="user_image_preview">
    </div>


  <div class="actions">
    <div class="action-input">
    <%= f.submit "Sign up" %>
    </div>
  </div>
<% end %>

<% render "devise/shared/links" %>
